@model List<my_mvc_app.ViewModels.SanPhamChonViewModel>

@if (!Model.Any())
{
    <div class="alert alert-warning">Chưa có sản phẩm nào trong hóa đơn tạm.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Tên sản phẩm</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sp in Model)
            {
                <tr>
                    <td>@sp.TenSanPham</td>
                    <td>@sp.SoLuongChon</td>
                    <td>@sp.Gia.ToString("N0")</td>
                    <td>@((sp.Gia * sp.SoLuongChon).ToString("N0"))</td>
                    <td>
                        <button class="btn btn-sm btn-danger" onclick="xoaSanPham('@sp.MaSanPham')">X</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="text-end fw-bold">Tổng tiền: @Model.Sum(x => x.Gia * x.SoLuongChon).ToString("N0") VNĐ</div>
}
