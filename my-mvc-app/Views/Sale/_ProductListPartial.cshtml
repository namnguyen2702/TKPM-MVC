@model List<my_mvc_app.ViewModels.SanPhamChonViewModel>

<table class="table table-bordered">
    <thead class="table-secondary">
        <tr>
            <th>Tên sản phẩm</th>
            <th>Giá</th>
            <th>Tồn kho</th>
            <th>Chọn SL</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TenSanPham</td>
                    <td>@item.Gia.ToString("N0")</td>
                    <td>@item.SoLuongTon</td>
                    <td>
                        <form onsubmit="event.preventDefault(); addToInvoice('@item.MaSanPham', this.soLuong.value)">
                            <input type="number" name="soLuong" value="1" min="1" max="@item.SoLuongTon" class="form-control d-inline-block w-50" />
                            <button type="submit" class="btn btn-sm btn-dark">Thêm</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
        <div class="alert alert-warning">
            Không tìm thấy kết quả phù hợp.
        </div>
        }
    </tbody>
</table>
