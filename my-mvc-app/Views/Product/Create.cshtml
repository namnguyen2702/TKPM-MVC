@model my_mvc_app.Models.TblSanPham

@{
    ViewData["Title"] = "Create Product";
}

<h1>Create Product</h1>

<!-- Hiển thị lỗi -->
@Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })

<form method="post" asp-action="Create">
    <div class="form-group">
        <label for="SMaSanPham">Mã sản phẩm</label>
        <input type="text" class="form-control" id="SMaSanPham" asp-for="SMaSanPham" />
        @Html.ValidationMessageFor(model => model.SMaSanPham, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="STenSanPham">Tên sản phẩm</label>
        <input type="text" class="form-control" id="STenSanPham" asp-for="STenSanPham" />
        @Html.ValidationMessageFor(model => model.STenSanPham, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="SDonVi">Đơn vị tính</label>
        <input type="text" class="form-control" id="SDonVi" asp-for="SDonVi" />
        @Html.ValidationMessageFor(model => model.SDonVi, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="FGia">Giá</label>
        <input type="number" class="form-control" id="FGia" asp-for="FGia" />
        @Html.ValidationMessageFor(model => model.FGia, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="DHanSuDung">Hạn sử dụng</label>
        <input type="date" class="form-control" id="DHanSuDung" asp-for="DHanSuDung" />
        @Html.ValidationMessageFor(model => model.DHanSuDung, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="ISoLuongTon">Số lượng tồn</label>
        <input type="number" class="form-control" id="ISoLuongTon" asp-for="ISoLuongTon" />
        @Html.ValidationMessageFor(model => model.ISoLuongTon, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
